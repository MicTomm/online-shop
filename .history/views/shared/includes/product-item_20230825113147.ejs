<li>
    <article id="product-item">
        <img src="<%=product.url%>" alt="<%=product.title%>">
        <div id="product-item-content">
            <h2><%=product.title%></h2>
            <% if (locals.isAdmin) { %>
                <div id="product-item-action">
                    <a href="/admin/products/<%= product.id %>" class="btn">View & Edit</a>
                    <button class="btn btn-reset" data-id="<%= product.id %>" data-csrf="<%= locals.csrfToken %>">Delete</button>
                </div>    
            <% } else { %>
            <div id="product-item-user-action">
                <a href="/products/<%= product.id %>" class="btn">View Details</a>
            </div>
            <% } %>
        </div>
    </article>
</li>