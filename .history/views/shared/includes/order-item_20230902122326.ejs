<li class="order-item">
    <article>
        <header class="order-header">
            <h2><span><%= order.productData.cartTotalPrice.toFixed(2) %></span>â‚¬ - <span> <%= order.formattedDate %></span></h2>
            <p><span class="badge"><%= order.status.toUpperCase() %></span></p>
        </header>
        <section class="order-details">
            <% if (locals.isAdmin) { %>
                <address>
                    <p><a href="mailto:<%= order.userData.email %>"><%= order.userData.fullName %></a></p>
                    <p><%= order.userData.address.street %> (<%= order.userData.address.postalCode %> <%= order.userData.address.city %>)</p>
                </address>
            <% } %>
            <hr/>
            <ol> 
                <% for (const item of order.productData.items) { %>
                    <li>
                        <%= item.product.title %> - $<%= item.itemTotalPrice.toFixed(2) %> ($<%= item.product.price.toFixed(2) %> x <%= item.itemTotalQuantity %>)
                    </li>
                <% } %>
            </ol>
        </section>
    </article>
</li>