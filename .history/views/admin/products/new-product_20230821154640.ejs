<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../shared/includes/head.ejs', {title: 'Create New Product'}) %>
    <link href="/styles/form.css" rel="stylesheet">
</head>
<body>
    <%- include('../../shared/includes/header.ejs') %>
    <h1>Create a New Product</h1>
    <main>
        <!-- multipart/form-data => per file upload-->
        <form action="admin/products" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
            <p>
                <label for="title">Title</label>
                <input type="text" name="title" id="title" required>
            </p>
            <p>
                <label for="title">Image</label>
                <input type="file" name="image" id="image" accept="image/png, image/jpg">
            </p>
            <p>
                <label for="title">Summary</label>
                <input type="text" name="summary" id="summary" maxlength="100" required>
            </p>
            <p>
                <label for="price">Price</label>
                <input type="number" name="price" id="price" min="0.01" step="0.01" required>
            </p>
            <p>
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="7"></textarea>
            </p>
            <button type="reset" class="btn btn-reset">Reset</button>
            <button class="btn">Save</button>
        </form>
    </main>
    <footer>
        <%- include('../../shared/includes/footer.ejs') %>
    </footer>
</body>
</html>