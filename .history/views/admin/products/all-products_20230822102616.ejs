<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../shared/includes/head.ejs', {title: 'All Products'}) %>
    <link href="/styles/form.css" rel="stylesheet">
</head>
<body>
    <%- include('../../shared/includes/header.ejs') %>
    <main>
        <h1>Products Administration</h1>
        <section>
            <h2>Manage Products</h2>
            <a href="/admin/products/new" class="btn">Add New Product</a>
        </section>
        <section>
            <ul>
                <% for (const product of products) { %>
                    <li>
                        <article>
                            <img src="<%=product.path%>" alt="<%=product.title%>">
                            <div>
                                <h2><%=product.title%></h2>
                            </div>
                            <div>
                                <a href="/admin/products/<%= product.id %>" class="btn">View & Edit</a>
                                <button class="btn btn-reset">Delete</button>
                            </div>    
                        </article>
                    </li>
                <% } %>
            </ul>
        </section>
    </main>
    <footer>
        <%- include('../../shared/includes/footer.ejs') %>
    </footer>
</body>
</html>